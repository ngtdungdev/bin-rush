<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/times"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="160dp"
        android:elevation="2dp"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="160dp"
        android:elevation="1dp"
        android:progress="25"
        android:progressDrawable="@drawable/custom_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/times"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="15dp"
        android:elevation="1dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="222dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="273dp"
        android:elevation="1dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FAFAFA"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/watering_can" />

    <TextView
        android:id="@+id/numberWater"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/times"
        android:layout_alignStart="@+id/btnPlay"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_marginStart="46dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="-31dp"
        android:elevation="1dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageTree"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/experience"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center_vertical|clip_horizontal" />

    <ImageView
        android:id="@+id/imageWater"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="122dp"
        android:elevation="0dp"
        app:srcCompat="@drawable/water_drop" />

    <ProgressBar
        android:id="@+id/experience"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="307dp"
        android:progressDrawable="@drawable/custom_progressbar" />

    <ImageView
        android:id="@+id/btnDaily"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/adsBanner"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:gravity="center"
        android:text="@string/ad_banner"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutHeart"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="270dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageHeart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/heart"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageHeart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/heart"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/imageHeart3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/heart"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/imageUnHeart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/unheart"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageUnHeart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/unheart"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageUnHeart3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/unheart"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutHeart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-100dp" />

</RelativeLayout>